{
  "compilerOptions": {
    "declarationDir": "types",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2019",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsxdev",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/stories", "dist", "**/*.test.ts"]
}
